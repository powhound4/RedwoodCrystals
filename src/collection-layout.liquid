---
renderData:
  title: Redwood Crystals - "{{ tag }}""
layout: main.liquid
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /collections/{{ tag }}/

---

<h1 id="category-title">{{tag | capitalize }} Collection</h1>

<ul id="products">
  {% for product in collections[tag] %}
    {% if product.data.name and product.data.out_of_stock == false %}
    <li>
      <a href="{{ product.url }}">
        <img class="collection-img" alt="" src="{{ product.data.album[0] }}" />

        {{ product.data.name }}
      </a>

      <p class="price">{{ product.data.price | money }}</p>
    </li>
    {% endif %}
  {% endfor %}
</ul>